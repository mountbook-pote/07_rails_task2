
<%= render "shared/account_profile",moji: "プロフィール" %>

<div style="text-align: right;">
  <%= link_to users_edit_profile_path, class: "btn btn-primary" , style:"color: white;" do %>
  <i class="bi bi-pencil"></i> 編集
  <% end %>
</div>

<table class="table account-profile-table">
  <tr>
    <th>アイコン画像</th>
    <td><%= render "shared/image_attached", size: 100 %></td>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>自己紹介</th>
    <td><%= @user.profile%></td>
  </tr>
</table>

