<h1>設定</h1>

<div class="row align-items-center" >
  <div class="col-lg-4">
    <%= render "shared/account_profile" %>
  </div>
  <div class="col-lg-8">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <h3 class="mt-3">アカウント</h3>
      <div class="field row py-2 align-items-center border-bottom w-100">
        <div class= "col-sm-3 fw-bold text-nowrap mb-2"><%= f.label :email %></div>
        <div class= "col-sm-9">
          <div><%= f.email_field :email, placeholder: "メールアドレスを入力", autocomplete: "email", class: "w-100" %></div>
          <div class="new-edit-error"><%= render "devise/shared/error_messages", resource: @user, attribute: :email %></div>
        </div> 
        <!--このコードはメルアド変更時のリンク踏み確認で、今回は関係ないみたい？-->
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
      <div class="field row py-2 align-items-center border-bottom w-100">
        <div class= "col-sm-3 fw-bold text-nowrap mb-2">
          <div><%= f.label :password, "変更用パスワード" %></div>
          <div style="font-size: 0.75rem;">(※変更する場合のみ)</div>
        </div>
        <div class= "col-sm-9">
          <div><%= f.password_field :password, placeholder: "変更用パスワードを入力", autocomplete: "new-password", class: "w-100" %></div>
          <div class="new-edit-error"><%= render "devise/shared/error_messages", resource: @user, attribute: :password %></div>
        </div> 
      </div>
      <div class="field row py-2 align-items-center border-bottom w-100">
        <div class= "col-sm-3 fw-bold text-nowrap mb-2">
          <div><%= f.label :password_confirmation, "確認用パスワード" %></div>
          <div style="font-size: 0.75rem;">(※変更する場合のみ)</div>
        </div>
        <div class= "col-sm-9">
          <div><%= f.password_field :password_confirmation, placeholder: "確認用パスワードを入力", autocomplete: "new-password", class: "w-100" %></div>
          <div class="new-edit-error"><%= render "devise/shared/error_messages", resource: @user, attribute: :password_confirmation %></div>
        </div> 
      </div>      
      <div class="field row py-2 align-items-center border-bottom w-100">
        <div class= "col-sm-3 fw-bold text-nowrap mb-2"><%= f.label :current_password %></div>
        <div class= "col-sm-9">
          <div><%= f.password_field :current_password, placeholder: "現在のパスワードを入力", autocomplete: "current-password", class: "w-100" %></div>
          <div class="new-edit-error"><%= render "devise/shared/error_messages", resource: @user, attribute: :current_password %></div>
        </div>
      </div>
      <div class="actions row py-2 w-100">
        <div class="col-md-6 py-2 "><%= f.submit "保存", class: "btn btn-save w-100" %></div>
        <div class="col-md-6 py-2 "><%= link_to "キャンセル", :back, class: "btn btn-outline-secondary w-100 " %></div>
      </div>
    <% end %>
  </div>
</div>






