<div class="container">
  <div class="mx-auto w-100 w-md-75 bg-white py-4">
    <div class="mx-auto" style="width: 65%;">
      <h2 class="text-center">新規登録</h2>
    
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
        <!--nameは後から追加した -->
        <div class="field row mb-3">
          <div class="col-12"><%= f.label :name, "ユーザー名<span style='color: red;'>*</span>".html_safe %></div>
          <div class="col-12">
            <div><%= f.text_field :name, placeholder: "ユーザー名を入力",autofocus: true, autocomplete: "name", class: "w-100" %></div>
            <div class="new-edit-error"><%= render "devise/shared/error_messages", resource: @user, attribute: :name %></div>
          </div>
        </div>
    
        <div class="field row mb-3">
          <div class="col-12"><%= f.label :email, "メールアドレス<span style='color: red;'>*</span>".html_safe %></div>
          <div class="col-12">
            <div><%= f.email_field :email, placeholder: "メールアドレスを入力", autocomplete: "email", class: "w-100" %></div>
            <div class="new-edit-error"><%= render "devise/shared/error_messages", resource: @user, attribute: :email %></div>
          </div>
        </div>
    
        <div class="field row mb-3">
          <div class="col-12">
            <%= f.label :password, "パスワード<span style='color: red;'>*</span>".html_safe %>
            <% if @minimum_password_length %>
            <% end %>
          </div>
          <div class="col-12">
            <div><%= f.password_field :password, placeholder: "パスワードを入力", autocomplete: "new-password", class:"w-100" %></div>
            <div class="new-edit-error"><%= render "devise/shared/error_messages", resource: @user, attribute: :password %></div>
          </div>
        </div>
        <div class="field row mb-0">
          <div class="col-12"><%= f.label :password_confirmation, "確認用パスワード<span style='color: red;'>*</span>".html_safe %></div>
          <div class="col-12">
            <div><%= f.password_field :password_confirmation, placeholder: "確認用パスワードを入力", autocomplete: "new-password", class:"w-100" %></div>
            <div class="new-edit-error"><%= render "devise/shared/error_messages", resource: @user, attribute: :password_confirmation %></div>
          </div>
        </div>
        <div class="actions">
          <br>
          <%= f.submit "新しいアカウントを作成", class: "btn btn-primary w-100 py-2 mb-3" %>
        </div>
      <% end %>
    
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

