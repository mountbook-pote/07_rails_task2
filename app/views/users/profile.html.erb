<h1>設定</h1>

<div class="row align-items-center" >
  <div class="col-lg-4">
    <%= render "shared/account_profile" %>
  </div>
  <div class="col-lg-8">
    <h3 class="mt-3">プロフィール</h3>
    <div class="pb-2 border-bottom" style="text-align: right;">
      <%= link_to users_edit_profile_path, class: "btn btn-primary" , style:"color: white;" do %>
      <i class="bi bi-pencil"></i> 編集
      <% end %>
    </div>
    <div class="field row py-2 align-items-center border-bottom">
      <div class= "col-sm-3 fw-bold text-nowrap mb-2">アイコン画像</div>
      <div class= "col-sm-9"><%= render "shared/image_attached", size: 100 %></div>
    </div>
    <div class="field row py-2 border-bottom">
      <div class= "col-sm-3 fw-bold text-nowrap mb-2">名前</div>
      <div class= "col-sm-9"><%= @user.name %></div>
    </div>
    <div class="field row py-2 border-bottom">
      <div class= "col-sm-3 fw-bold text-nowrap mb-2">自己紹介</div>
      <div class= "col-sm-9"><%= @user.profile%></div>
    </div>
  </div>
</div>

